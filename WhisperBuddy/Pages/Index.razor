@page "/"

<MudFileUpload T="IBrowserFile" FilesChanged="UploadFiles" Disabled="_generating">
    <ButtonTemplate>
        <MudButton HtmlTag="label"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.CloudUpload"
                   for="@context">
            Upload Files
        </MudButton>
    </ButtonTemplate>
</MudFileUpload>

@if (_browserFile is not null)
{
    <MudText Typo="@Typo.h6">@_browserFile.Name <code>@_browserFile.Size bytes</code></MudText>
}

<MudButton Class="mr-2" Variant="Variant.Filled" Color="Color.Primary" OnClick="Generate">
    @if (_generating)
    {
        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
        <MudText Class="ms-2">Generating</MudText>
    }
    else
    {
        <MudText>Generate</MudText>
    }
</MudButton>

<MudProgressLinear Color="Color.Primary" Size="Size.Large" Striped="true" Value="@_progressPercentage" Class="my-7">
    <MudText Typo="Typo.subtitle1" Color="Color.Dark">
        <b>@(_progressPercentage.ToString("0.00"))%</b>
    </MudText>
</MudProgressLinear>

<MudList>
    @foreach (var segment in _segments)
    {
        <MudListItem Icon="@Icons.Material.Filled.AudioFile">
            @segment
        </MudListItem>
    }
</MudList>
