<MudFileUpload T="IBrowserFile" FilesChanged="UploadFiles">
    <ButtonTemplate>
        <MudButton HtmlTag="label"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.CloudUpload"
                   for="@context">
            Upload Files
        </MudButton>
    </ButtonTemplate>
</MudFileUpload>

@if (_browserFile is not null)
{
    <MudText Typo="@Typo.h6">@_browserFile.Name <code>@_browserFile.Size bytes</code></MudText>
}

<MudButton Class="mr-2" Variant="Variant.Filled" Color="Color.Primary" OnClick="Generate">Generate</MudButton>

<MudList>
    @foreach (var segment in _segments)
    {
        <MudListItem Icon="@Icons.Material.Filled.AttachFile">
            @segment
        </MudListItem>
    }
</MudList>

