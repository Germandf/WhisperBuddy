@page "/settings"
@inject ISettingsService SettingsService

<MudText Typo="Typo.h3" Align="Align.Center">Settings</MudText>

<MudSwitch @bind-Checked="@SettingsService.IsDarkMode"
           ThumbIcon="@(SettingsService.IsDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)"
           ThumbIconColor="@(SettingsService.IsDarkMode ? Color.Dark : Color.Warning)">
    Theme mode: @(SettingsService.IsDarkMode ? "Dark" : "Light")
</MudSwitch>

